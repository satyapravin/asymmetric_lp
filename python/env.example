# Environment Configuration
# Copy this file to .env and fill in your values

# Ethereum RPC URL (use Infura, Alchemy, or your own node)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Your wallet private key (NEVER commit this to version control!)
# MUST use environment variable reference format: ${VARIABLE_NAME}
# Example: PRIVATE_KEY=${MY_PRIVATE_KEY}
PRIVATE_KEY=${MY_PRIVATE_KEY}

# Chain configuration (copy from chain.conf)
CHAIN_ID=1
CHAIN_NAME=Ethereum Mainnet
UNISWAP_V3_FACTORY=0x1F98431c8aD98523631AE4a59f267346ea31F984
UNISWAP_V3_POSITION_MANAGER=0xC36442b4a4522E871399CD717aBDD847Ab11FE88
UNISWAP_V3_ROUTER=0xE592427A0AEce92De3Edee1F18E0157C05861564
WETH_ADDRESS=0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2

# Token addresses (chain-specific)
USDC_ADDRESS=0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48
USDT_ADDRESS=0xdAC17F958D2ee523a2206206994597C13D831ec7
DAI_ADDRESS=0x6B175474E89094C44Da98b954EedeAC495271d0F
WBTC_ADDRESS=0x2260FAC5E5542a773Aa44fBCfeDf7C193bc2C599

# Gas settings
MAX_GAS_LIMIT=500000

# Token pair configuration
TOKEN_A_ADDRESS=0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2
TOKEN_B_ADDRESS=0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48

# Fee tier (50=0.05%, 30=0.3%, 100=1%)
FEE_TIER=30                          # Fee tier (30 = 0.3%, 50 = 0.05%)

# Model configuration
INVENTORY_MODEL=AvellanedaStoikovModel  # Model to use for range calculation

# Rebalancing configuration
MIN_RANGE_PERCENTAGE=2.0
MAX_RANGE_PERCENTAGE=50.0
MONITORING_INTERVAL_SECONDS=60
REBALANCE_THRESHOLD=0.10                 # Inventory deviation threshold for rebalancing (0.10 = 10%)
TRADE_DETECTION_THRESHOLD=0.0005          # Threshold for detecting trades in backtest (0.0005 = 0.05%)
POSITION_FALLOFF_FACTOR=0.1               # Minimum position value falloff factor (0.1 = 10%)

# Backtesting parameters
RISK_FREE_RATE=0.02                       # Annual risk-free rate (0.02 = 2%)
DEFAULT_DAILY_VOLATILITY=0.02             # Default daily volatility (0.02 = 2%)

# Default initial balances for backtesting
DEFAULT_INITIAL_BALANCE_0=5000.0          # Default initial token A balance
DEFAULT_INITIAL_BALANCE_1=0.1             # Default initial token B balance

# Inventory management model parameters (Avellaneda-Stoikov inspired)
INVENTORY_RISK_AVERSION=0.1          # Risk aversion parameter (0.05-0.2)
TARGET_INVENTORY_RATIO=0.5           # Target ratio of token A to total value (0.5 = 50/50)
MAX_INVENTORY_DEVIATION=0.3          # Maximum inventory deviation before forced rebalance (0.3 = 30%)
BASE_SPREAD=0.05                     # Base spread for range calculation (0.05 = 5%)

# Volatility calculation parameters
VOLATILITY_WINDOW_SIZE=20            # Number of price points for volatility calculation
DEFAULT_VOLATILITY=0.02              # Default volatility when insufficient data (0.02 = 2%)
MAX_VOLATILITY=2.0                   # Maximum allowed volatility (2.0 = 200%)
MIN_VOLATILITY=0.01                  # Minimum allowed volatility (0.01 = 1%)

# GLFT model specific parameters (only used when INVENTORY_MODEL=GLFTModel)
EXECUTION_COST=0.001                 # Execution cost (0.001 = 0.1%)
INVENTORY_PENALTY=0.05               # Inventory holding penalty (0.05 = 5%)
MAX_POSITION_SIZE=0.1                # Maximum position size (0.1 = 10% of portfolio)
TERMINAL_INVENTORY_PENALTY=0.2       # Terminal inventory penalty (0.2 = 20%)
INVENTORY_CONSTRAINT_ACTIVE=true     # Enable inventory constraints (true/false)

# Telegram alerting (optional)
TELEGRAM_BOT_TOKEN=your_bot_token_here    # Bot token from @BotFather
TELEGRAM_CHAT_ID=your_chat_id_here        # Your Telegram chat ID

# Error handling
MAX_RETRIES=3                        # Maximum retry attempts for failed operations
RETRY_DELAY_SECONDS=2.0              # Initial delay between retries (seconds)

# 0MQ inventory publishing (optional)
ZMQ_ENABLED=false                    # Enable 0MQ inventory publishing
ZMQ_PUBLISHER_HOST=localhost         # 0MQ publisher host
ZMQ_PUBLISHER_PORT=5555              # 0MQ publisher port
