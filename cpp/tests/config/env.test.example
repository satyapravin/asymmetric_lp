# Test Environment Variables for Exchange Authentication
# Copy this file to .env.test and fill in your test credentials

# Test Mode Configuration
TEST_MODE=true
LOG_LEVEL=DEBUG
USE_MOCK_EXCHANGES=false

# Binance Test Credentials (use testnet/sandbox keys)
BINANCE_TEST_API_KEY=your_binance_test_api_key_here
BINANCE_TEST_API_SECRET=your_binance_test_api_secret_here

# Deribit Test Credentials (use testnet/sandbox keys)
DERIBIT_TEST_API_KEY=your_deribit_test_api_key_here
DERIBIT_TEST_API_SECRET=your_deribit_test_api_secret_here

# GRVT Test Credentials (use testnet/sandbox keys)
GRVT_TEST_API_KEY=your_grvt_test_api_key_here
GRVT_TEST_API_SECRET=your_grvt_test_api_secret_here

# Test WebSocket URLs (usually same as production for testnet)
BINANCE_PUBLIC_WS_URL=wss://fstream.binance.com/stream
BINANCE_PRIVATE_WS_URL=wss://fstream.binance.com/ws
DERIBIT_PUBLIC_WS_URL=wss://www.deribit.com/ws/api/v2
DERIBIT_PRIVATE_WS_URL=wss://www.deribit.com/ws/api/v2
GRVT_PUBLIC_WS_URL=wss://api.grvt.io/ws
GRVT_PRIVATE_WS_URL=wss://api.grvt.io/ws

# Test HTTP URLs (use testnet endpoints)
BINANCE_HTTP_URL=https://testnet.binance.vision
DERIBIT_HTTP_URL=https://test.deribit.com
GRVT_HTTP_URL=https://test.api.grvt.io

# Test Configuration Overrides
TEST_TIMEOUT_MS=5000
MAX_RETRIES=3
MOCK_DELAY_MS=100
MOCK_ERROR_RATE=0.1
MOCK_FILL_RATE=0.8
